<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipoPaginaXF.TipoPagina.Navigation.Pages.Modal">
    <ContentPage.Content>
        <StackLayout
            BackgroundColor="LightSkyBlue" >
            
            <StackLayout
                HeightRequest="50"
                BackgroundColor="LightBlue" >

                <Label 
                    TextColor="Blue"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand"
                    Text="Eu sou o Título" />

            </StackLayout>
            
            <Label
                TextColor="Blue"
                Text="Eu sou um Modal!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button 
                Text="Fechar o Modal"
                Clicked="FecharModal" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>