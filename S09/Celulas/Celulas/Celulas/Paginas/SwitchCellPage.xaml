<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Celulas.Paginas.SwitchCellPage"
             Title="SwitchCell"
             Padding="10" >
    <ContentPage.Content>
        <TableView>
            <TableRoot>
                <TableSection
                    Title="Configuração">

                    <SwitchCell 
                        x:Name="SwitchCell_Backup"
                        On="False"
                        Text="Habilitar backup" 
                        OnColor="Blue" />

                    <SwitchCell 
                        x:Name="SwitchCell_IniciarAutomatico"
                        On="False"
                        Text="Iniciar automaticamente" 
                        OnColor="Blue" />
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>