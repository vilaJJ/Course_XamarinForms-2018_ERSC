<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppConsultarCEP.MainPage">

    <StackLayout
        BackgroundColor="#FFBF00"
        Padding="30"
        Spacing="30"
    >
        <Image 
            x:Name="LogoCorreios"
            Source="correios.png"
            Margin="50"
        />

        <Entry 
            x:Name="EntryCEP"
            Placeholder="Digite o CEP"
            TextColor="DarkOrange"
            PlaceholderColor="#FFBF00"
            BackgroundColor="White"
            Keyboard="Numeric"
        />

        <Button 
            x:Name="ButtonBuscarCEP"
            Text="BUSCAR CEP"
            TextColor="White"
            BackgroundColor="#00416B"
        />

        <Label 
            x:Name="LabelResultado"
            TextColor="Black"
        />
    </StackLayout>

</ContentPage>
