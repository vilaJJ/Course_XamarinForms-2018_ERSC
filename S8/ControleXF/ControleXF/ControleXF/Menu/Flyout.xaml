<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ControleXF.Menu.Flyout"
    xmlns:page="clr-namespace:ControleXF" xmlns:menu="clr-namespace:ControleXF.Menu" x:DataType="menu:Flyout">
    <FlyoutPage.Flyout>
        <ContentPage
            Title="Menu">

            <StackLayout>
                <Button 
                    Text="Activity Indicator"
                    Clicked="GoToActivityIndicatorPage" />

                <Button 
                    Text="Progress Bar"
                    Clicked="GoToProgressBarPage" />
                
                <Button 
                    Text="Box View"
                    Clicked="GoToBoxViewPage" />

                <Button 
                    Text="Label"
                    Clicked="GoToLabelPage" />

                <Button 
                    Text="Button"
                    Clicked="GoToButtonPage"/>
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <page:MainPage />
    </FlyoutPage.Detail>
</FlyoutPage>